<script>
function showScreen(id) {
  document.querySelectorAll('.screen').forEach(s => s.classList.remove('active'));
  document.getElementById(id).classList.add('active');
  document.getElementById("header").innerText = document.getElementById(id).getAttribute("data-title");
}

/* Fake cost calculator */
function calculateCost() {
  let days = Number(document.getElementById("days").value);
  let room = Number(document.getElementById("room").value);
  let tests = Number(document.getElementById("tests").value);
  let total = (days * 200) + (room * 100) + (tests * 50);
  document.getElementById("cost-output").innerText = "Estimated Cost: $" + total;
}

/* Add itinerary item */
function addItinerary() {
  let item = document.getElementById("itinerary-input").value;
  if(item.trim() !== "") {
    let list = document.getElementById("itinerary-list");
    let li = document.createElement("li");
    li.innerText = item;
    list.appendChild(li);
    document.getElementById("itinerary-input").value = "";
  }
}

/* Billing Tracker Add Item */
function addBillingItem() {
  let desc = document.getElementById("bill-desc").value;
  let amt = document.getElementById("bill-amt").value;
  if(desc && amt) {
    let box = document.getElementById("billing-items");
    box.innerHTML += `<div>${desc}: $${amt}</div>`;
    document.getElementById("bill-desc").value = "";
    document.getElementById("bill-amt").value = "";
  }
}
</script>

